@model EssaisXTypeProdVM

<div class="modal fade" id="ProdModal" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog modal-xl navbar-inra">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Projets avec une provenance <strong> @Model.NomProduit </strong> des 3 dernières années</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalcontent">
                <!--TODO: je pourrais insérer uniquement la vue partielle _InfoEquipemReserves.cshtml-->
                <div class="fixed_head">
                    <table class="table table-sm table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Numéro projet</th>
                                <th scope="col">Titre projet</th>
                                <th scope="col">Essai Id</th>
                                <th scope="col">Titre essai</th>
                                <th scope="col">Auteur essai</th>
                                <th scope="col">Precision produit</th>
                                <th scope="col">Quantité produit</th>
                                <th scope="col">Destination produit final</th>
                                <th scope="col">Date création essai</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model.ListEssais)
                            {
                                <tr>
                                    <td>@x.NumProjet</td>
                                    <td>@x.TitreProjet</td>
                                    <td>@x.IdEssai</td>
                                    <td>@x.TitreEssai</td>
                                    <td>@x.AuteurEssai</td>
                                    <td>@x.PrecisionProd</td>
                                    <td>@x.QuantiteProd</td>
                                    <td>@x.DestProdFinal</td>
                                    <td>@x.DateCreationEssai</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="submit" class="btn btn-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
