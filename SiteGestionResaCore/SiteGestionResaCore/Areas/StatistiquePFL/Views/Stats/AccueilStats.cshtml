@model AccueilStatsVM
@{
    ViewData["Title"] = "Statistiques";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="GenererExcelResas" asp-controller="Stats" asp-area="StatistiquePFL" method="post">
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h4 class="text-center"><strong>Récupérer les infos sur les réservations pour une période définie</strong></h4>
    <div class="form-group row justify-content-center">
        <br />
        <div class="col-sm-4 col-md-4 col-lg-4">
            <!--Date picker -->
            <div class="form-group">
                @Html.Label("Du : ")
                <input class="form-control" name="DateDu" asp-for="@Model.DateDu" type="date" />
                @Html.ValidationMessageFor(m => m.DateDu, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4">
            <!--Date picker -->
            <div class="form-group">
                @Html.Label("Au : ")
                <!--https://stackoverflow.com/questions/42309439/how-to-post-input-type-date-to-mvc-controller-->
                <!--https://stackoverflow.com/questions/31556837/binding-model-asp-net-input-type-date-->
                <input class="form-control" name="DateAu" asp-for="@Model.DateAu" type="date" />
                @Html.ValidationMessageFor(m => m.DateAu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <input type="submit" class="btn btn-outline-success" value="Télécharger .csv réservations" />
    </div>
</form>
<br />
<hr />
<hr />

<h4 class="text-center"><strong>Nombre des jours d'utilisation par équipement pour l'année en cours (@Model.AnneeActuel)</strong></h4>
<h6 class="text-center">Cliquez sur la zone, pour ouvrir la liste des équipements Vs jours</h6>
<form class="form-row justify-content-center">
    @foreach (var zo in Model.ListZones)
    {
        <a class="btn navbar-inra mr-2 mt-2" href="#" onclick="OuvrirComptageZone(@zo.IdZone)">@zo.NomZone</a> <!-- mr= margin rigth and mt= margin top-->
    }
</form>
<br />
<hr />
<hr />

<h4 class="text-center">Récupérer excel avec les équipements utilisés par projet ou par équipe</h4>
<br />
<form class="form-row justify-content-center">
    <div class="col-md-4">
        <a class="btn btn-light" href="#" onclick="SelectProjet()"><strong>Equipements utilisés par projet</strong></a>
    </div>
    <div class="col-md-4 offset-4">
        <a class="btn btn-light" href="#" onclick="SelectProjet()"><strong>Equipements utilisés par équipe</strong></a>
    </div>   
</form>
<br />
<hr />
<hr />

<div id="InfosJoursZone"></div>

<div id="EquipementsXProjet"></div>

@section Scripts
{
    <script>
        function OuvrirComptageZone(id) {
            if (id) //Vérifier que l'id contient une valeur
            {
                $.ajax({
                    url: "@Url.Action("EquipVsDays", "Stats", new { Area = "StatistiquePFL" })?id=" + id,
                    type: 'POST',
                    success: function (html) { // si Action s'exécute bien alors on charge le contenu html sur la page actuel sans altérer les actions utilisateur
                        $("#InfosJoursZone").html(html);
                        $("#JoursModal").modal('show');
                    }
                });
            }
        }

        function SelectProjet() {         
            $.ajax({
                url: "@Url.Action("SelectProjet", "Stats", new { Area = "StatistiquePFL" })",
                type: 'POST',
                success: function (html) { // si Action s'exécute bien alors on charge le contenu html sur la page actuel sans altérer les actions utilisateur
                    $("#EquipementsXProjet").html(html);
                    $("#UtilXProjetModal").modal('show');
                }
            });        
        }
    </script>
}