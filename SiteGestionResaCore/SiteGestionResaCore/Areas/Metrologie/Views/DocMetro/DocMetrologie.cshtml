@model SiteGestionResaCore.Areas.Metrologie.Data.DocMetroVM

@{
    ViewBag.Title = "Documents Metrologie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form class="text-center" asp-action="ChargerDocument" asp-controller="DocMetro" asp-area="Metrologie" method="post">
    <h4 class="text-center">Charger un nouveau document métrologie<strong></strong></h4>
    <br />
    <div class="row justify-content-center">
        <input type="submit" class="btn btn-outline-success" value="Charger document" />
    </div>
</form>

<br />
<hr />
<br />
<div class="col-sm-12 col-md-12 text-center">
    <div class="fixed_head_resas">
        <table class="table justify-content-center table-sm">
            <h4>Documents liés à la métrologie disponibles pour lecture : </h4>
            <br />
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom Document</th>
                    <th scope="col">Date d'ajout</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.docs)
                {
                    <tr>
                        <td>@x.NomDocument</td>
                        <td>@x.dateAjout</td>
                        <td>@x.DescriptionDoc</td>
                        <td>
                            <a class="btn navbar-inra" asp-action="OuvrirDoc" asp-area="Metrologie" asp-controller="DocMetro" asp-route-id="@x.idDoc">Consulter</a>
                            <a class="btn navbar-inra" asp-action="SupprimerDoc" asp-area="Metrologie" asp-controller="DocMetro" asp-route-id="@x.idDoc">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row justify-content-center">
    <a asp-action="AccueilMetrologie" asp-controller="DocMetro" asp-area="Metrologie">Revenir à la page précedente</a>
</div>

<form asp-area="Metrologie" asp-controller="DocMetro" asp-action="EnvoiChargeDoc" method="post" enctype="multipart/form-data">
    <!-- Modal pop-up pour ajout d'un nouveau document AQ-->
    <div class="modal fade" id="AddingDocMetro" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
        <div class="modal-dialog navbar-inra" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="staticBackdropLabel">Ajout des documents liés à la métrologie </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalcontent">
                    <p>Sélectionnez un fichier local pour le rajouter dans la base des données PFL (métrologie)</p>
                    <div class="form-row">
                        <input type="file" name="file" required />
                    </div>
                    <br />
                    <p>Donnez une description du document</p>
                    <div class="form-row">
                        <input class="col-md-12" type="text" autocomplete="off" placeholder="Description du fichier" name="description" required />
                    </div>
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Ignorer</button>
                    <input type="submit" class="btn btn-primary" value="Ajouter document" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @*script pour afficher le popoup de confirmation de demande *@
    <script>
        @{
            if (ViewBag.ModalAddDocMetro == null)
            {
                ViewBag.ModalAddDocMetro = "hide";
            }
        }
        $('#AddingDocMetro').modal('@ViewBag.ModalAddDocMetro');

    </script>
}