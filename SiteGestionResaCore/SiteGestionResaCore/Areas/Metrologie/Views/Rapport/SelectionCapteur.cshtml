@model SiteGestionResaCore.Areas.Metrologie.Data.Rapport.SelectCapteurVM

@{
    ViewBag.Title = "Selectionner Capteur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h2 class="text-center">Ajouter un rapport métrologique pour un capteur d'un équipement</h2>
<h5 class="text-center"><strong>Note: Le capteur doit être déclaré au préalable</strong></h5>
<hr />
<br />

<h5 class="text-center">Ajouter un rapport de métrologie INTERNE</h5>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("AjouterRapportInterne", "Rapport", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group row text-center">
        <select asp-for="SelectecEquipementIntId" asp-items="@Model.EquipementInterneItem" class="col-md-12 form-control">
            <option value="-1">- Sélectionnez un équipement -</option>
        </select>
        @Html.ValidationMessageFor(m => m.SelectecEquipementIntId, "", new { @class = "text-danger" })
        <hr />
        <strong class="text-center">@ViewBag.Message</strong>
    </div>
    <div class="form-group row">
        <div class="offset-5 col-md-1">
            <input type="submit" value="Ajouter" class="btn btn-default navbar-inra" />
        </div>
    </div>
}

<hr />

<h5 class="text-center">Ajouter un rapport de métrologie EXTERNE</h5>
@using (Html.BeginForm("AjouterRapportExterne", "Rapport", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group row text-center">
        <select asp-for="SelectecEquipementExtId" asp-items="@Model.EquipementExterneItem" class="col-md-12 form-control">
            <option value="-1">- Sélectionnez un équipement -</option>
        </select>
        @Html.ValidationMessageFor(m => m.SelectecEquipementExtId, "", new { @class = "text-danger" })
        <hr />
        <strong class="text-center">@ViewBag.Message</strong>
    </div>
    <div class="form-group row">
        <div class="offset-5 col-md-1">
            <input type="submit" value="Ajouter" class="btn btn-default navbar-inra" />
        </div>
    </div>
}

<div class="row offset-5">
    <a asp-action="AccueilMetrologie" asp-controller="DocMetro" asp-area="Metrologie">Revenir à la page précedente</a>
</div>
