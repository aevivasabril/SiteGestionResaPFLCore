@model DocQualiteViewModel
@{
    ViewBag.Title = "ListeEquipements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-md-10 text-center">
        <h5 class="text-center"><strong>Documents utiles Plate-forme LAIT </strong></h5>
        <h6 class="text-center">Nous mettons à votre disposition des documents utiles pour vos manipes sur la PFL</h6>
    </div>
</div>
<hr />
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@foreach (var x in Model.ListDocsQualite)
{
    <div class="card">
        <h5 class="card-header">
            @x.NomRubriqueDoc
        </h5>
        <div class="card-body">
            <!--<h5 class="card-title">@x.DescriptionDoc</h5>-->
            <p class="card-text">@x.DescriptionDoc</p>
            <a class="btn text-center navbar-inra" asp-action="TelechargerDocxId" asp-controller="DocQualite" asp-route-id="@x.IdDocument">Télécharger</a>
        </div>
    </div>
    <br />
}