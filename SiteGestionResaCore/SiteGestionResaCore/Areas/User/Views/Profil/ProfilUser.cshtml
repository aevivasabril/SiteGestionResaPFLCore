@model SiteGestionResaCore.Areas.User.Data.Profil.ProfilUserVM

@{
    ViewBag.Title = "Profil utilisateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<h2 class="text-center">Mon profil</h2>
<h5>Vos informations utilisateur</h5>
<hr />

<div class="form-group">
    <div class="form-row">
        @Html.LabelFor(m => m.NomUsr, new { @class = "col-md-5 control-label" })
        @Html.TextBoxFor(m => m.NomUsr, new { @class = "col-md-5 form-control", @disabled = true })
    </div>
</div>

<div class="form-group">
    <div class="form-row">
        @Html.LabelFor(m => m.PrenomUsr, new { @class = "col-md-5 control-label" })
        @Html.TextBoxFor(m => m.PrenomUsr, new { @class = "col-md-5 form-control", @disabled = true })
    </div>
</div>

<div class="form-group">
    <div class="form-row">
        @Html.LabelFor(m => m.MailUsr, new { @class = "col-md-5 control-label" })
        @Html.TextBoxFor(m => m.MailUsr, new { @class = "col-md-5 form-control", @disabled = true })
    </div>
</div>

<div class="form-group">
    <div class="form-row">
        @Html.LabelFor(m => m.NomEquipe, new { @class = "col-md-5 control-label" })
        @Html.TextBoxFor(m => m.NomEquipe, new { @class = "col-md-5 form-control", @disabled = true })
    </div>
</div>

<div class="form-group">
    <div class="form-row">
        @Html.LabelFor(m => m.NomOrganisme, new { @class = "col-md-5 control-label" })
        @Html.TextBoxFor(m => m.NomOrganisme, new { @class = "col-md-5 form-control", @disabled = true })
    </div>
</div>
<hr>
<div class="row justify-content-center">
    <table class="table table-striped justify-content-center table-sm">
        <h5 class="text-center">Enquetes de satisfaction non répondues</h5>
        <thead class="thead-dark">
            <tr class="text-center">
                <th scope="col">Projet</th>
                <th scope="col">Essai</th>
                <th scope="col">Lien vers l'enquête</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.ListEnquetesNonRepondues)
            {
                <tr>
                    <td class="text-center">@x.InfoProjet</td>
                    <td class="text-center">@x.InfoEssai</td>
                    <td class="text-center"><a href="@x.LienEnquete">Lien vers enquête</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>