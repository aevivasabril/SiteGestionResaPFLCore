@model SiteGestionResaCore.Areas.Reservation.Data.Consultation.ConsultationViewModel
@{
    ViewData["Title"] = "ResasValidees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1>Réservations validées </h1>
<h6>En tant qu'administrateur vous pouvez supprimer un essai à la demande d'un utilisateur</h6>
<br />

@if (ViewBag.AfficherMessage == true)
{
    <h5 class="text-center" style="color:green"><strong> @ViewBag.Message</strong> </h5>
}
<div class="row">
    <div class="col-sm-12 col-md-12 text-center">
        <div class="fixed_head_resas">
            <div class="row justify-content-center">
                <table class="table table-striped justify-content-center table-sm">
                    <h5 class="text-center">Liste des essais validés</h5>
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Projet</th>
                            <th scope="col">Responsable projet</th>
                            <th scope="col">Infos Essai</th>
                            <th scope="col">Equipements réservées</th>
                            <th scope="col">Date création</th>
                            <th scope="col">Date de validation</th>
                            <th scope="col">Confidentialité</th>
                            <th scope="col">Supprimer?</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.ResasValid)
                        {
                            <tr>
                                @*<td><a asp-action="VoirInfosProj" asp-controller="Consultation" asp-area="Reservation" asp-route-id="@x.idProj">@x.NomProjet</a></td>*@
                                <td><a href="#" onclick="ModalInfosProjet(@x.idProj)">@x.NomProjet</a></td>
                                <td>@x.MailRespProj</td>
                                <td><a href="#" onclick="ModalInfosEssai(@x.idEssai)">@x.TitreEssai</a></td>
                                @*<td><a asp-action="VoirReservations" asp-controller="Consultation" asp-area="Reservation" asp-route-id="@x.idEssai">Equipements réservés</a></td>*@
                                <td><a href="#" onclick="ModalEquipReserv(@x.idEssai)">Equipements réservés</a></td>
                                <td>@x.DateSaisieEssai</td>
                                <td>@x.DateValidation</td>
                                <td>@x.Confidentialit</td>
                                <td>
                                    <a class="btn navbar-inra" asp-action="SupprimerEssaiAdm" asp-area="Reservation" asp-controller="Consultation" asp-route-id="@x.idEssai">Supprimer</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <a asp-action="MenuConsultation" asp-controller="Validation" asp-area="Reservation">Revenir à la page précedente</a>
</div>

<!-- Modal pour affichage des infos "projet"-->
<div id="InfosProjet"></div>

<!-- Modal pour affichage des infos "essai"-->
<div id="InfosEssai"></div>

<!-- Modal pour affichage des infos "Reservations"-->
<div id="EquipReserves"></div>

<!-- Modal pour affichage de la confirmation "Refuser"-->
<form asp-action="ConfSuppEssaiAdm" asp-controller="Consultation" asp-area="Reservation" asp-route-id="@Model.IdEssai" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- Modal pop-up d'info-->
    <div class="modal fade" id="AnnulerEssAdm" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
        @Html.AntiForgeryToken()
        <div class="modal-dialog navbar-inra">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="staticBackdropLabel">Annulation Essai</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalcontent">
                    <p class="font-weight-bold text-center">
                        Etês-vous sûr de vouloir annuler votre essai N° @Model.IdEssai
                        "@Model.TitreEssai"?
                    </p>
                    <p>Indiquez le(s) raison(s) de l'annulation: </p>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.RaisonAnnulation, new { @class = "col-md-12 form-control" })
                        @Html.ValidationMessageFor(m => m.RaisonAnnulation, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <input type="submit" class="btn btn-primary" value="Valider" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @*script pour afficher le popoup de confirmation de demande *@
    <script>
        @{
            if (ViewBag.modalAnnul == null)
            {
                ViewBag.modalAnnul = "hide";
            }
            if (ViewBag.modalResas == null)
            {
                ViewBag.modalResas = "hide";
            }
        }
        $('#ResaModal').modal('@ViewBag.modalResas');
        $('#AnnulerEssAdm').modal('@ViewBag.modalAnnul');

        function ModalInfosEssai(id) {
            if (id)
            {
                $.ajax({
                    url: "@Url.Action("VoirInfosEssai", "Consultation", new { Area = "Reservation" })?id=" + id,
                    type: 'POST',
                    success: function (html) {
                        $("#InfosEssai").html(html);
                        $("#EssaiModal").modal('show');
                    }
                });
            }
        }

        function ModalInfosProjet(id) {
            if (id)
            {
                $.ajax({
                    url: "@Url.Action("VoirInfosProj", "Consultation", new { Area = "Reservation" })?id=" + id,
                    type: 'POST',
                    success: function (html) {
                        $("#InfosProjet").html(html);
                        $("#ProjModal").modal('show');
                    }
                });
            }
        }

        function ModalEquipReserv(id) {
            if (id)
            {
                $.ajax({
                    url: "@Url.Action("VoirReservations", "Consultation", new { Area = "Reservation" })?id=" + id,
                    type: 'POST',
                    success: function (html) {
                        $("#EquipReserves").html(html);
                        $("#ResaModal").modal('show');
                    }
                });
            }
    }

    </script>
}
