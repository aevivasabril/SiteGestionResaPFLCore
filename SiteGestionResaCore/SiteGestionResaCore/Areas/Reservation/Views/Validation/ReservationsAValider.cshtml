@model SiteGestionResaCore.Areas.Reservation.Data.Validation.ResasPourValidationViewModel
@{
    ViewBag.Title = "ReservationsAValider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1>Reservations à valider</h1>
<br />

<div class="row">
    <div class="col-sm-12 col-md-12 text-center">
        <div class="row justify-content-center">
            <table class="table table-striped justify-content-center">
                <h5 class="text-center">Liste des essais en attente de validation</h5>
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">N° Essai</th>
                        <th scope="col">Informations essai(lien)</th>
                        <th scope="col">Nom Projet(lien)</th>
                        <th scope="col">N° projet</th>
                        <th scope="col">Equipements réservés(ouverture pop-up)</th>
                        <th scope="col">Conflit(lien)</th>
                        <th scope="col">Date création</th>
                        <th scope="col">Saisie par</th>
                        <th scope="col">Action(valider/refuser)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.resasAValider)
                    {
                        <tr>
                            <td>@x.id</td>

                            <td><a asp-action="VoirInfosEssai" asp-controller="Validation" asp-area="Reservation" asp-route-id="@x.id">Voir essai @x.Commentaire</a></td>

                            <td><a href="#">@x.NomProjet</a></td>
                            <td>@x.NumProjet</td><!--Voir comme faire ce link-->
                            <td><a href="#">Equipements réservés</a></td>
                            <td>
                                @if (x.ConflitExist == true)
                                {
                                    <a href="#">Voir conflit</a>
                                }
                            </td>
                            <td>@x.DateCreation</td>
                            <td>@x.MailUser</td>
                            <td>
                                <a class="btn navbar-inra" asp-action="ValiderEssai" asp-area="Reservation" asp-controller="Validation" asp-route-id="@x.id">Valider</a>
                                <a class="btn navbar-inra" asp-action="RefuserEssai" asp-area="Reservation" asp-controller="Validation" asp-route-id="@x.id">Refuser</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<!-- Modal pour affichage des infos "essai"-->
<div class="modal fade" id="EssaiModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog navbar-inra">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Informations essai N° @Model.infosEssai.id</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalcontent">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row"></th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row"></th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" id="submit" class="btn btn-secondary" data-dismiss="modal">Ignorer</button>
                @*<button type="button" class="btn btn-primary">Valider</button>*@
                <input type="submit" class="btn btn-primary" value="Valider" />
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <a href="#">Revenir à la page précedente</a>
</div>

@section Scripts {
    @*script pour afficher le popoup de confirmation de demande *@
    <script>
        @{
            if (ViewBag.modalEssai == null)
            {
                ViewBag.modalEssai = "hide";
            }         
        }
        $('#EssaiModal').modal('@ViewBag.modalEssai');       
    </script>
}