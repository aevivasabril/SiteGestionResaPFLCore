@model SiteGestionResaCore.Areas.Reservation.Data.Validation.ResasPourValidationViewModel
@{
    ViewBag.Title = "ReservationsAValider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1>Reservations à valider</h1>
<br />

<div class="row">
    <div class="col-sm-12 col-md-12 text-center">
        <div class="row justify-content-center">
            <table class="table table-striped justify-content-center">
                <h5 class="text-center">Liste des essais en attente de validation</h5>
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">N° Essai</th>
                        <th scope="col">Informations essai(lien)</th>
                        <th scope="col">N° projet(lien)</th>
                        <th scope="col">Equipements réservés(ouverture pop-up)</th>
                        <th scope="col">Conflit(lien)</th>
                        <th scope="col">Date création</th>
                        <th scope="col">Saisie par</th>
                        <th scope="col">Action(valider/refuser)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.resasAValider)
                    {
                        <tr>
                            <td>@x.idEssai</td>
                            <td><a asp-action="VoirInfosEssai" asp-controller="Validation" asp-area="Reservation" asp-route-id="@x.idEssai">Infos essai</a></td>
                            <td><a asp-action="VoirInfosProjet" asp-controller="Validation" asp-area="Reservation" asp-route-id="@x.idProj">@x.NumProjet</a></td>
                            <td><a asp-action="ConsulterResasProjet" asp-controller="Validation" asp-area="Reservation" asp-route-id="@x.idEssai">Equipements réservés</a></td>
                            <td>
                                @if (x.ConflitExist == true)
                                {
                                    <a href="#">Voir conflit</a>
                                }
                            </td>
                            <td>@x.DateCreation</td>
                            <td>@x.MailUser</td>
                            <td>
                                <a class="btn navbar-inra" asp-action="ValiderEssai" asp-area="Reservation" asp-controller="Validation" asp-route-id="@x.idEssai">Valider</a>
                                <a class="btn navbar-inra" asp-action="RefuserEssai" asp-area="Reservation" asp-controller="Validation" asp-route-id="@x.idEssai">Refuser</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<!-- Modal pour affichage des infos "essai"-->
<div class="modal fade" id="EssaiModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog modal-lg navbar-inra">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Informations essai N° @Model.infosEssai.id</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalcontent">
                <table class="table table-sm table-borderless">
                    <thead>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">N° Essai</th>
                            <td>@Model.infosEssai.id</td>
                        </tr>
                        <tr>
                            <th scope="row">Date Création</th>
                            <td>@Model.infosEssai.DateCreation</td>
                        </tr>
                        <tr>
                            <th scope="row">Email manipulateur essai</th>
                            <td>@Model.infosEssai.MailManipulateur</td>
                        </tr>
                        <tr>
                            <th scope="row">Type de produit entrant</th>
                            <td>@Model.infosEssai.TypeProduitEntrant</td>
                        </tr>
                        <tr>
                            <th scope="row">Demande saisie par</th>
                            <td>@Model.infosEssai.MailUser</td>
                        </tr>
                        <tr>
                            <th scope="row">Descriptif essai</th>
                            <td>@Model.infosEssai.Commentaire</td>
                        </tr>
                        <tr>
                            <th scope="row">Confidentialité essai</th>
                            <td>@Model.infosEssai.Confidentialite</td>
                        </tr>
                        <tr>
                            <th scope="row">Transport assuré par</th>
                            @if (Model.infosEssai.TransportStlo == true)
                            {
                                <td>STLO</td>
                            }
                            else
                            {
                                <td>Autre</td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">Précision produit</th>
                            <td>@Model.infosEssai.PrecisionProd</td>
                        </tr>
                        <tr>
                            <th scope="row">Quantité produit</th>
                            <td>@Model.infosEssai.QuantiteProd</td>
                        </tr>
                        <tr>
                            <th scope="row">Provenance produit</th>
                            <td>@Model.infosEssai.ProveProd</td>
                        </tr>
                        <tr>
                            <th scope="row">Destination produit</th>
                            <td>@Model.infosEssai.PrecisionProd</td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" id="submit" class="btn btn-secondary" data-dismiss="modal">Ok</button>           
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ProjModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog modal-lg navbar-inra">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Informations projet <strong>@Model.infosProj.TitreProjet</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalcontent">
                <table class="table table-sm table-borderless">
                    <thead>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Numéro projet </th>
                            <td>@Model.infosProj.NumProjet</td>
                        </tr>
                        <tr>
                            <th scope="row">Type projet</th>
                            <td>@Model.infosProj.TypeProjet</td>
                        </tr>
                        <tr>
                            <th scope="row">Financement projet</th>
                            <td>@Model.infosProj.Financement</td>
                        </tr>
                        <tr>
                            <th scope="row">Organisme</th>
                            <td>@Model.infosProj.Organisme</td>
                        </tr>
                        <tr>
                            <th scope="row">Email responsable projet</th>
                            <td>@Model.infosProj.MailRespProj</td>
                        </tr>
                        <tr>
                            <th scope="row">Provenance projet</th>
                            <td>@Model.infosProj.Provenance</td>
                        </tr>
                        <tr>
                            <th scope="row">Description projet</th>
                            <td>@Model.infosProj.Description</td>
                        </tr>
                        <tr>
                            <th scope="row">Date création projet</th>
                            <td>@Model.infosProj.DateCreation</td>
                        </tr>
                        <tr>
                            <th scope="row">Projet saisie par </th>
                            <td>@Model.infosProj.MailUsrSaisie</td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" id="submit" class="btn btn-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ResaModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog modal-xl navbar-inra">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Informations projet <strong>@Model.infosProj.TitreProjet</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalcontent">
                <table class="table table-sm table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">Zone</th>
                            <th scope="col">Nom Equipement</th>
                            <th scope="col">Date Début</th>
                            <th scope="col">Date Fin</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Reservations)
                        {
                            <tr>
                                <td>@r.ZoneEquipement</td>
                                <td>@r.NomEquipement</td>
                                <td>@r.DateDebut</td>
                                <td>@r.DateFin</td>                               
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" id="submit" class="btn btn-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <a href="#">Revenir à la page précedente</a>
</div>

@section Scripts {
    @*script pour afficher le popoup de confirmation de demande *@
    <script>
        @{
            if (ViewBag.modalEssai == null)
            {
                ViewBag.modalEssai = "hide";
            }      
            if (ViewBag.modalProj == null)
            {
                ViewBag.modalProj = "hide";
            }     
            if (ViewBag.modalResas == null)
            {
                ViewBag.modalResas = "hide";
            }      
        }
        $('#EssaiModal').modal('@ViewBag.modalEssai');     
        $('#ProjModal').modal('@ViewBag.modalProj');  
        $('#ResaModal').modal('@ViewBag.modalResas');  
    </script>
}