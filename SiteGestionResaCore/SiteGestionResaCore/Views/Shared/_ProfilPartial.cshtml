@if (User.Identity.IsAuthenticated)
{
    <div class="card text-white bg-dark mb-3" style="width: 18rem;">
        <!--<img class="card-img-top" src="~/Content/Images/iconeBaniere.jpg" alt="Card image cap">-->
        <div class="card-body">
            <h5 class="card-title">
                <span class="fas fa-user"></span>
                @User.Identity.Name
            </h5>
            <!--<p class="card-text">Accèdez à votre profil en choissisant une des options</p>-->
        </div>
        <ul class="list-group list-group-flush">
            <a asp-action="ProfilUser" asp-controller="Profil" asp-area="User" class="list-group-item btn-link">Mon profil</a>

            <a asp-action="MesReservations" asp-controller="ResasUser" asp-area="User" class="list-group-item btn-link">Mes réservations</a>

            <a asp-action="ListEssaisDonnees" asp-controller="DonneesUser" asp-area="User" class="list-group-item btn-link">Récupérer mes données</a>

            <a asp-action="CreerEntrepot" asp-controller="CreationEntrepot" asp-area="DonneesPGD" class="list-group-item btn-link">Créer un entrêpot des données (selon PGD PFL)</a>

            <a asp-action="MesEntrepots" asp-controller="AccesEntrepot" asp-area="DonneesPGD" class="list-group-item btn-link">Mes entrepôts des données</a>
            @if (User.IsInRole("DonneesAdmin") || User.IsInRole("MainAdmin"))
            {
                <a asp-action="AccesTousEntrepots" asp-controller="AccesEntrepot" asp-area="DonneesPGD" class="list-group-item btn-link">Tous les entrepôts des données (Administrateurs)</a>
            }
        </ul>
    </div>
}
else
{
    <div class="card text-white bg-dark mb-3" style="width: 14rem;">
        <!--<img class="card-img-top" src="~/Content/Images/iconeBaniere.jpg" alt="Card image cap">-->
        <div class="card-body">
            <h5 class="card-title">
                <span class="fas fa-user"></span>
                User
            </h5>
            <p class="card-text">Connectez-vous pour accèder à toutes les fonctionnalités de votre profil</p>
        </div>
    </div>
}
